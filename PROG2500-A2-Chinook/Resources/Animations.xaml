<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Fade in animation -->
    <Storyboard x:Key="FadeIn">
        <DoubleAnimation From="0" To="1" Duration="0:0:0.3" Storyboard.TargetProperty="Opacity"/>
    </Storyboard>

    <!-- Slide in from left animation -->
    <Storyboard x:Key="SlideInFromLeft">
        <ThicknessAnimation From="-50,0,0,0" To="0,0,0,0" Duration="0:0:0.5" Storyboard.TargetProperty="Margin"/>
        <DoubleAnimation From="0" To="1" Duration="0:0:0.5" Storyboard.TargetProperty="Opacity"/>
    </Storyboard>

    <!-- Slide in from top animation -->
    <Storyboard x:Key="SlideInFromTop">
        <ThicknessAnimation From="0,-30,0,0" To="0,0,0,0" Duration="0:0:0.5" Storyboard.TargetProperty="Margin"/>
        <DoubleAnimation From="0" To="1" Duration="0:0:0.5" Storyboard.TargetProperty="Opacity"/>
    </Storyboard>
</ResourceDictionary>