<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Color Palette -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#3498db"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="#2c3e50"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#e74c3c"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="#ecf0f1"/>
    <SolidColorBrush x:Key="TextBrush" Color="#34495e"/>
    <SolidColorBrush x:Key="LightTextBrush" Color="#7f8c8d"/>

    <!-- Text Styles -->
    <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource SecondaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,15"/>
    </Style>

    <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource SecondaryBrush}"/>
        <Setter Property="Margin" Value="0,5,0,5"/>
    </Style>

    <!-- Control Styles -->
    <Style x:Key="SearchBoxStyle" TargetType="TextBox">
        <Setter Property="Height" Value="30"/>
        <Setter Property="Width" Value="250"/>
        <Setter Property="Padding" Value="8,5,8,5"/>
        <Setter Property="BorderBrush" Value="{StaticResource LightTextBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <Style x:Key="ExpanderStyle" TargetType="Expander">
        <Setter Property="Margin" Value="0,3,0,3"/>
        <Setter Property="BorderBrush" Value="{StaticResource LightTextBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Padding" Value="5"/>
    </Style>

    <Style x:Key="SearchLabelStyle" TargetType="TextBlock">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,5,0"/>
        <Setter Property="Foreground" Value="{StaticResource SecondaryBrush}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
</ResourceDictionary>